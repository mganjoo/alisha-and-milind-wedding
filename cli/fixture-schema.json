{
  "definitions": {},
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://example.com/root.json",
  "type": "object",
  "title": "The Root Schema",
  "required": ["collection", "fixtures"],
  "properties": {
    "collection": {
      "$id": "#/properties/collection",
      "type": "string",
      "title": "Collection",
      "description": "A Firestore collection",
      "default": "",
      "pattern": "^[a-zA-Z0-9]+$"
    },
    "fixtures": {
      "$id": "#/properties/fixtures",
      "type": "array",
      "title": "The Fixtures Schema",
      "items": {
        "$id": "#/properties/fixtures/items",
        "type": "object",
        "title": "The Items Schema",
        "required": ["id", "data"],
        "properties": {
          "id": {
            "$id": "#/properties/fixtures/items/properties/id",
            "type": "string",
            "title": "The Id Schema",
            "default": "",
            "examples": ["test_35067944ab12"],
            "pattern": "^test_[a-zA-Z0-9-]+$"
          },
          "data": {
            "$id": "#/properties/fixtures/items/properties/data",
            "type": "object",
            "title": "The Data Schema"
          }
        }
      }
    }
  }
}
