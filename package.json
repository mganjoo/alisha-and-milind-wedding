{
  "name": "alisha-and-milind-wedding",
  "private": true,
  "version": "0.1.0",
  "author": "Milind Ganjoo <milind.ganjoo@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mganjoo/alisha-and-milind-wedding"
  },
  "bugs": {
    "url": "https://github.com/mganjoo/alisha-and-milind-wedding/issues"
  },
  "devDependencies": {
    "husky": "3.0.9",
    "lerna": "3.19.0",
    "lint-staged": "9.4.2",
    "prettier": "1.18.2",
    "typescript": "3.7.2"
  },
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "bootstrap:ci": "lerna bootstrap --ci",
    "postbootstrap:ci": "npm run build",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "prebuild:netlify": "lerna bootstrap --scope @alisha-and-milind-wedding/shared-types --scope @alisha-and-milind-wedding/website --ci",
    "build:netlify": "npm --prefix shared-types run build && npm --prefix website run build",
    "build": "tsc --build",
    "build:watch": "tsc --build --watch",
    "check:types": "lerna run --concurrency 1 --stream check:types",
    "firestore": "firebase emulators:start --only firestore"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "lerna run check:lint"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
