{
  "name": "@alisha-and-milind-wedding/functions",
  "private": true,
  "version": "0.1.0",
  "engines": {
    "node": "8"
  },
  "main": "lib/index.js",
  "dependencies": {
    "firebase-admin": "8.8.0",
    "firebase-functions": "3.3.0",
    "yup": "0.27.0"
  },
  "devDependencies": {
    "@firebase/testing": "0.16.0",
    "@types/mocha": "5.2.7",
    "@types/yup": "0.26.26",
    "@typescript-eslint/eslint-plugin": "2.11.0",
    "@typescript-eslint/parser": "2.11.0",
    "eslint": "6.7.2",
    "eslint-config-prettier": "6.7.0",
    "eslint-plugin-no-only-tests": "2.3.1",
    "firebase-functions-test": "0.1.7",
    "firebase-tools": "7.8.1",
    "mocha": "6.2.2",
    "ts-node": "8.5.4",
    "typescript": "3.7.3"
  },
  "scripts": {
    "build": "tsc",
    "start": "firebase serve",
    "prestart": "npm run build",
    "shell": "FIRESTORE_EMULATOR_HOST=localhost:8080 firebase functions:shell",
    "preshell": "npm run build",
    "logs": "firebase functions:log",
    "check": "npm run check:types && npm run check:lint",
    "check:types": "tsc --noEmit",
    "check:lint": "eslint --cache --ignore-path .gitignore . --ext ts",
    "test": "firebase emulators:exec --only firestore 'npm run test:unit'",
    "test:unit": "FIRESTORE_EMULATOR_HOST=localhost:8080 mocha",
    "test:ci": "npm run check && npm run test",
    "test:watch": "mocha --watch",
    "firestore": "firebase emulators:start --only firestore"
  }
}
